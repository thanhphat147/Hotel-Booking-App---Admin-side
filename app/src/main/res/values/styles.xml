<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="linear_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linear_v">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="button_logout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
    </style>

    <style name="textview">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="edit_text">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="img_model">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="tv_model_regular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_model_bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_regular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="linear_h_margin_chitiet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="image_avatar">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="image_khachsan">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
    </style>


</resources>